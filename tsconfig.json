{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".", // Added baseUrl
    "paths": {      // Added paths
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "src/app/product-details/[productId]/page.jsx", "src/lib/providers.jsx", "src/components/AllProducts/SortSelector.jsx", "src/app/all-products/[category]/page.jsx", "src/components/AllProducts/ProductFilters.jsx", "src/app/wishlist/wishlist-client.jsx", "src/app/wishlist/page.jsx", "src/utils/addToWishlist.jsx", "src/app/cart/page.jsx", "src/app/login/page.jsx", "src/app/order-success/[orderId]/page.jsx", "src/app/support/contact-us/page.jsx", "src/app/reviews/[productId]/page.jsx", "src/components/Home/ComboSlider.jsx", "src/app/combos/page.jsx"  ],
  "exclude": [
    "node_modules"
  ]
}